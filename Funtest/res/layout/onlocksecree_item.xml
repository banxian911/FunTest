<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal" >
    
    
    <ImageButton
        android:id="@+id/fun_reorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:background="#00000000" 
        android:src="@drawable/settings_func_reorder" />
    
    <ImageView
        android:id="@+id/func_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/fun_reorder" 
        />

    
    <TextView
        android:id="@+id/func_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_marginStart="88dp"
        android:layout_toRightOf="@+id/func_icon"
        android:text="hello"
        android:background="@null"
        android:textColor="#000"
        android:textSize="16sp" />

    
    <ImageButton
        android:id="@+id/edit_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/remove_image"
        android:layout_toLeftOf="@+id/remove_image"
        android:background="#00000000" 
        android:src="@drawable/func_settings_edit" />
    
    <ImageButton
        android:id="@+id/remove_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_marginRight="40dp"
        android:background="#00000000" 
        android:src="@drawable/func_settings_remove" />

</RelativeLayout>
